@(Html.Telerik().Grid<Website.Models.UploadModel>()
        .Name("UploadGrid")
        .DataKeys(keys => keys.Add("Id"))
        .Columns(columns =>
        {
            columns.Bound(c => c.Picture)
                .ClientTemplate("<img src='/Content/UserFiles/<#= Picture #>' alt='<#= Name #>' />")
                .Width(200)
                .Title("Picture");
            columns.Bound(c => c.Name);
            columns.Command(c => c.Edit()).Width(200);
            columns.Command(c => c.Delete()).Width(200);
        })
        .ToolBar(commands => commands.Insert())
        .DataBinding(dataBinding => dataBinding.Ajax()
            .Select("Select", "Upload")
            .Update("Update", "Upload")
            .Insert("Insert", "Upload")
            .Delete("Delete", "Upload")
        )
        .ClientEvents(events => events
            .OnSave("onGridSave")
        )
)


